# rnd=$RANDOM
rnd=007
loc=westeurope
grp=az204-cosmosdb-$rnd
acct=az204-cosmosacct-$rnd
dbname=persondb

az group create --name $grp --location $loc

az cosmosdb create --name $acct --kind GlobalDocumentDB -g $grp

az cosmosdb sql database create --account-name $acct --name $dbname -g $grp

az cosmosdb sql container create --account-name $acct --database-name $dbname --name persons --partition-key-path "/city"  --throughput 400 -g $grp
    